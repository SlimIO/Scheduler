{
  "name": "@slimio/scheduler",
  "version": "0.8.0",
  "description": "Slim.IO - Addon callbacks scheduler",
  "main": "index.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prepublishOnly": "pkg-ok",
    "test": "cross-env psp && nyc --reporter=lcov ava --verbose",
    "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
    "coverage": "codecov",
    "report": "nyc report --reporter=html"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "src/scheduler.class.js"
  ],
  "husky": {
    "hooks": {
      "pre-push": "cross-env npm test && eslint src/scheduler.class.js",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SlimIO/Scheduler.git"
  },
  "keywords": [
    "Addon",
    "Callbacks",
    "Scheduler"
  ],
  "author": "SlimIO",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SlimIO/Scheduler/issues"
  },
  "homepage": "https://github.com/SlimIO/Scheduler#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@escommunity/minami": "^1.0.0",
    "@slimio/eslint-config": "^4.1.0",
    "@slimio/is": "^1.5.0",
    "@slimio/psp": "^0.12.1",
    "ava": "^3.8.2",
    "codecov": "^3.7.0",
    "cross-env": "^7.0.2",
    "driftless": "^2.0.3",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "jsdoc": "^3.6.4",
    "nyc": "^15.0.1",
    "pkg-ok": "^2.3.1"
  }
}
